<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  
  <property name="M_PI" value="3.1415926535897931" />

  <xacro:macro name="nxt_servo_v0" params="name reflect">

    <link name="${name}_servo_link">
      <inertial>
        <mass value="0.080000" />
        <!-- center of mass (com) is defined w.r.t. link local coordinate system -->
        <origin xyz="0.0 0.0 0" />
        <inertia  ixx="0.1" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
      </inertial>
      <visual>
        <!-- visual origin is defined w.r.t. link local coordinate system -->
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://nxt_description/meshes/collada/sensors/interactiv_servo_motor_without_hubs.dae" scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>
      <collision>
        <!-- collision origin is defined w.r.t. link local coordinate system -->
        <origin xyz="0 -0.106 -0.027" rpy="0 0 0.0" />
        <geometry>
          <box size="0.0995 0.2695 0.1115"/>
        </geometry>
      </collision>
    </link>

    <link name="${name}_servo_hubs_link">
      <inertial>
        <mass value="0.000170" />
        <!-- center of mass (com) is defined w.r.t. link local coordinate system -->
        <origin xyz="0.0 0.0 0" />
        <inertia  ixx="0.1" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
      </inertial>
      <visual>
        <!-- visual origin is defined w.r.t. link local coordinate system -->
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://nxt_description/meshes/collada/sensors/servo_hubs.dae" scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>
      <collision>
        <!-- collision origin is defined w.r.t. link local coordinate system -->
        <origin xyz="0.02975 0 0" rpy="0 0 0.0" />
        <geometry>
          <box size="0.0595 0.058 0.058"/>
        </geometry>
      </collision>
    </link>

    <joint name="${name}_servo_joint" type="continuous">
      <parent link="${name}_servo_link"/>
      <child link="${name}_servo_hubs_link"/>
      <origin xyz="0 0 0" rpy="0 0 ${reflect*M_PI}" />
      <axis xyz="1 0 0" />
    </joint>

  </xacro:macro>
</robot>
